@model ProyectoAutos.Models.Pedido

@{
    ViewBag.Title = "Comprar";
}

<h2>Confirmar Compra</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                @if (Model.auto.archivo.Any(a => a.tipo == ProyectoAutos.Models.FyleType.Imagen))
                {
                    <dt>Imagen: </dt>
                    <dd><img src="~/Archivo/Obtener?id=@Model.auto.archivo.First(a => a.tipo == ProyectoAutos.Models.FyleType.Imagen).idArchivo" /></dd>
                }
                <dt>
                    Nombre: 
                </dt>
                <dd>@Html.DisplayFor(model => model.auto.nombre)</dd>
                <dt>A nombre de: </dt>
                <dd>@Html.DisplayFor(model => model.usuario.nombre)</dd>
            </dl>
        </div>
    </div>
    
}

<div>
    @Html.ActionLink("Cancelar", "Index") | 
    @Html.ActionLink("Aceptar", "MisPedidos", new { id = Model.idAutos }, new { @class = "btn btn-success" })
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
